<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base light theme -->
    <style name="Base.Theme.WeatherForecastApp.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background and Surface colors -->
        <item name="background">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Customize text appearance -->
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textColorHint">@color/secondary_variant</item>

        <!-- Status bar and navigation bar -->
        <item name="statusBarBackground">@color/on_primary</item>
        <item name="android:navigationBarColor">@color/primary_variant</item>

        <!-- Ripple and highlight colors -->
        <item name="rippleColor">@color/on_primary</item>
        <item name="android:textColorHighlight">@color/on_primary</item>

        <!-- Customize more attributes if needed -->
    </style>

    <!-- Light theme for the app -->
    <style name="Theme.WeatherForecastApp" parent="Base.Theme.WeatherForecastApp.Light">
        <!-- Override or add attributes specific to your app -->
    </style>
</resources>
